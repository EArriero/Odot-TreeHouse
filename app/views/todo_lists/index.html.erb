<%= title "Todo Lists" %>

<ul class="list todo-lists no-bullet">
  <% @todo_lists.each do |todo_list| %>
  <!-- Comment. <%= dom_id(todo_list) %> will print a dynamic ID for use with the id attribute. -->
    <li id="<%= dom_id(todo_list) %>" class="clearfix">
      <%= link_to todo_list_todo_items_path(todo_list), class: "row" do %>
        <div class="small-10 medium-11 columns truncate" title="<%= todo_list.title %>">
          <%= todo_list.title %>
        </div>
        <div class="small-2 medium-1 columns"><span class="label round"><%= todo_list.todo_items.size %></span>          
        </div>
      <% end %>
    </li>
  <% end %>
</ul>